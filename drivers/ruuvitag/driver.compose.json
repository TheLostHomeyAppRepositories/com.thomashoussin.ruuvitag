{
  "id": "ruuvitag",
  "name": {
    "en": "RuuviTag"
  },
  "class": "sensor",
  "capabilities": [
    "measure_battery",
    "measure_humidity",
    "measure_pressure",
    "measure_temperature",
    "measure_rssi",
    "acceleration",
    "onoff",
    "alarm_battery",
    "button.resetbattery"
  ],
  "capabilitiesOptions": {
    "button.resetbattery": {
      "maintenanceAction": true,
      "title": {
        "en": "Reset alarm battery"
      },
      "desc": {
        "en": "This will reset alarm battery"
      }
    }
  },
  "images": {
    "large": "/drivers/ruuvitag/assets/images/large.png",
    "small": "/drivers/ruuvitag/assets/images/small.png"
  },
  "energy": {
    "batteries": [ "CR2477" ]
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Battery settings"
      },
      "children": [
        {
          "id": "batt_mini",
          "type": "number",
          "value": 2500,
          "label": {
            "en": "Minimum value for battery voltage, in mV"
          }
        },
        {
          "id": "batt_maxi",
          "type": "number",
          "value": 3000,
          "label": {
            "en": "Maximum value for battery voltage, in mV"
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Movement settings"
      },
      "children": [
        {
          "id": "motiondetection",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Enable motion detection"
          }
        },
        {
          "id": "movement_rate",
          "type": "number",
          "value": 1,
          "min": 1,
          "max": 254,
          "label": {
            "en": "Movement rate to trigger motion alarm (1 : most sensitive)"
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Presence settings"
      },
      "children": [
        {
          "id": "TTL",
          "type": "number",
          "value": 5,
          "min": 1,
          "max": 60,
          "label": {
            "en": "Number of attempts before marking as out"
          }
        },
        {
          "id": "enable_notif",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Show notifications when entering/leaving range"
          }
        }
      ]
    }
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": false
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}